  "scripts": {
    "test": "jest --verbose --runInBand",
    "dev": "concurrently -k -n \"Typescript,Node\" -p \"[{name}]\" -c \"blue,green\" \"tsc --watch\" \"set NODE_ENV=dev&& nodemon dist/index.js\"",
    "start": "tsc && node dist/index.js"
  },
  "author": "Julien Hovelaque",
  "license": "ISC",
  "devDependencies": {
    "@types/config": "0.0.39",
    "@types/express": "^4.17.13",
    "@types/express-fileupload": "^1.1.7",
    "@types/jest": "^26.0.24",
    "@types/jimp": "^0.2.28",
    "@types/joi": "^17.2.3",
    "@types/mongoose": "^5.11.97",
    "@types/morgan": "^1.9.3",
    "@types/node": "^16.3.3",
    "@types/supertest": "^2.0.11",
    "concurrently": "^6.2.0",
    "jest": "^27.0.6",
    "nodemon": "^2.0.12",
    "prettier": "^2.3.2",
    "supertest": "^6.1.6",
    "ts-jest": "^27.0.3",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "cloudinary": "^1.26.3",
    "config": "^3.3.6",
    "express": "^4.17.1",
    "express-fileupload": "^1.2.1",
    "jimp": "^0.16.1",
    "joi": "^17.4.2",
    "mongoose": "^5.13.3",
    "morgan": "^1.10.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.ts"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "coverageReporters": [
      "lcov",
      "text-summary"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    }
  }
